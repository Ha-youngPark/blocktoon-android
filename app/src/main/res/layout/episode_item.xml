<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/episode_item"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:padding="5dp">



    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="92dp"
        android:layout_height="64dp"
        android:background="@color/gray"/>


    <LinearLayout
        android:layout_width="113dp"
        android:layout_height="70dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_webtoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="웹툰 이름"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/dunggeunmo"
            android:layout_marginTop="3dp"/>

        <TextView

            android:id="@+id/name_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="에피소드 이름"
            android:textColor="@color/black"
            android:fontFamily="@font/dunggeunmo"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/cost_episode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가격"
            android:textColor="@color/black"
            android:fontFamily="@font/dunggeunmo"
            android:layout_marginTop="3dp"
            />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="end">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_monetization_on_black_24dp" />


    </LinearLayout>



</LinearLayout>